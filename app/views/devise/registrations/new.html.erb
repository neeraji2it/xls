<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">

 <h2>Sign Up</h2>
     
<%= form_for(resource, as: resource_name, url: registration_path(resource_name, :role => params[:role])) do |f| %>
  <%= devise_error_messages! %>
 <br>
      <%= f.hidden_field :role, :value => params[:role] %>
      <div class="row">
  <div class="col-lg-6">
      <%= f.label :First_name %><br/>
  <div class="input-group">
         
          <%= f.text_field :first_name, placeholder: "Firstname", class: "form-control input-lg", label: false, :required =>true, :style => "border: 1px solid green;width:232px;" %>
        </div></div>
       
<div class="col-lg-5">
        <%= f.label :Lastname %>
  <div class="input-group">
        
          <%= f.text_field :last_name, placeholder: "Lastname", class: "form-control input-lg", label: false, :required =>true , :style => "border: 1px solid green;width:203px;" %>
        </div></div></div><br/>
       <div class="row">
  <div class="col-lg-6">
<%= f.label :Username %><br/>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= f.text_field :username, placeholder: "Name", class: "form-control input-lg", label: false, :required =>true, :style => "border: 1px solid green;width: 388px;" %>
        </div><br/>
       
    <%= f.label :email %><br/>
  <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-envelope"></span>
          <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg", label: false, :required =>true, :style => "border: 1px solid green;width: 388px;" %>
        </div><br/>
<div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
      <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-hand-right"></span>
          <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg", label: false, :required =>true, :style => "border: 1px solid green;width: 388px;" %>
        </div><br/>
  </div>

  <%= f.label :password_confirmation %><br/>
   <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-hand-right"></span>
          <%= f.password_field :password_confirmation, placeholder: "Password_confirmation", class: "form-control input-lg", label: false, :required =>true, :style => "border: 1px solid green;width: 388px;" %>
        </div></div></div><br>
  
  <div class="text-center">
  <%= f.submit "Sign Up",class: "btn btn-primary"%>

    <% end %>

<%= render "devise/shared/links" %>
</div></div></div></div></div>
