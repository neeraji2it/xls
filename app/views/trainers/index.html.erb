<link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

<div class="center">
   <%= form_tag trainers_path, :method => 'get',:id => "trainers_search" do %>    
   <div class="inner-addon float: left;">
<i class="glyphicon glyphicon-search"></i>
    <%= text_field_tag :search, params[:search],placeholder: "Search Items", class:"btn btn-default" %>
    <%= submit_tag "Search", :name => nil, class: "btn btn-large btn-primary" %> 
<% end %>
</div></div>
<h1><%= link_to "Home", root_path %></h1>
  Download:
  <%= link_to "CSV", trainers_path(format: "csv") %> |
  <%= link_to "Excel", trainers_path(format: "xls") %>

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
<thead>
    <tr>
    <th>SN</th>
      <th>Trainer Name</th>
      <th>Type</th>
      <th>Industry</th>
      <th>Years of Experience (years)</th>
      <th>Expertise</th>
      <th>Geography</th>
      <th>Overall Ratings on</th>
      <th>References</th>
       <th>Caption part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

   <% @trainers.each_with_index do |trainer,index| %>
        <tr>
          <td><%= index + 1 %></td>
           <td><%= trainer.name %></td>
          <td><%= trainer.profile_type %></td>
            <td><%= trainer.industry %></td>
              <td><%= trainer.experience %></td>
              <td><%= trainer.expertise %></td>
            <td><%= trainer.geography %></td>
              <td><%= trainer.rating %></td>
             <td><%= trainer.references %></td>
   <%#= link_to "File", trainer.avatar_url %>
         <td><%= link_to "delete",  trainer, method: :delete, confirm: "Are you sure that you wish to delete #{trainer.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>Import Products</h2>

<%= form_tag import_trainers_path, multipart: true do %>

  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>


