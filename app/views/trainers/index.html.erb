<link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


 Download:
  <%= link_to "CSV", trainers_path(format: "csv") %> |
  <%= link_to "Excel", trainers_path(format: "xls") %>

<table id="example" class="table table-striped table-bordered"cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>SN</th>
      <th>Trainer Name</th>
      <th>Type</th>
      <th>Industry</th>
      <th>Years of<br> Experience <br>(years)</th>
      <th>Expertise</th>
      <th>Geography</th>
      <th>Overall<br> Ratings on</th>
      <th>References</th>
      <th>Caption<br>part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each_with_index do |trainer,index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%=link_to trainer.name,trainer_path(trainer.id) %></td>
        <td><%= trainer.profile_type %></td>
        <td><%= trainer.industry %></td>
        <td><%= trainer.experience %></td>
        <td><%= trainer.expertise %></td>
        <td><%= trainer.geography %></td>
        <td><%= trainer.rating %></td>
        <td><%= trainer.references %></td>
        <%#= link_to "File", trainer.avatar_url %>
        <td><%= link_to ('<span class="glyphicon glyphicon-trash"> </span>').html_safe,  trainer, method: :delete, confirm: "Are you sure that you wish to delete #{trainer.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Import Products</h2>
  <%= form_tag import_trainers_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
  <% end %><br><br><br>
     
<script src="/assets/jquery.dataTables.min.js" type="text/javascript"></script>

<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>

